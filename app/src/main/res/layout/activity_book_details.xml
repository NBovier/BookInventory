<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.book_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_add_book_titlebox"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_add_book_title"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="191dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/tv_add_book_titlebox" />

        <TextView
            android:id="@+id/tv_add_book_datebox"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_add_book_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:text="Date"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_add_book_date"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_add_book_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/tv_add_book_titlebox"
            android:focusable="false" />


        <TextView
            android:id="@+id/tv_add_book_author"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_add_book_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:text="Author"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/sp_add_book_author"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_add_book_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/tv_add_book_author"
            android:onClick="showAuthors"
            android:spinnerMode="dialog"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_add_book_categorie"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_add_book_author"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:text="Category"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sp_add_book_categorie"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_add_book_author"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/tv_add_book_categorie"
            android:layout_toRightOf="@+id/tv_add_book_categorie"
            android:spinnerMode="dialog"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_add_book_summary"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_add_book_categorie"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Summary"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/et_add_book_summary"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_below="@+id/tv_add_book_summary"
            android:layout_marginTop="0dp"
            android:ems="30"
            android:inputType="textMultiLine"
            android:textSize="18sp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:onClick="editBook"
            android:src="@android:drawable/ic_menu_edit"
            app:backgroundTint="@color/design_default_color_primary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:onClick="editBook"
            android:src="@android:drawable/ic_menu_delete" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>