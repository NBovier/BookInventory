<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.author_add">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


        <EditText
            android:id="@+id/et_add_author_firstname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:inputType="text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="bottom"
            android:hint="Firstname..."
            android:focusable="true" />

        <EditText
            android:id="@+id/et_add_author_lastname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:inputType="text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_add_author_firstname"
            android:clickable="true"
            android:gravity="bottom"
            android:hint="Lastname..."
            android:focusable="true" />


        <EditText
            android:id="@+id/et_add_author_date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/et_add_author_lastname"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:hint="Date..."
            android:inputType="date" />


        <TextView
            android:id="@+id/tv_add_author_biblio"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/et_add_author_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Bibliography"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/et_add_author_biblio"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_below="@+id/tv_add_author_biblio"
            android:layout_marginTop="0dp"
            android:ems="30"
            android:gravity="left|top"
            android:hint="Enter a bibliography..."
            android:inputType="textMultiLine" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/validateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:onClick="showAuthors"
            android:src="@android:drawable/ic_menu_upload" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>