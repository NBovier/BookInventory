<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.book_add">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


        <EditText
            android:id="@+id/et_add_book_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:inputType="text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="bottom"
            android:hint="Title..."
            android:focusable="true" />


        <EditText
            android:id="@+id/et_add_book_date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/et_add_book_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:hint="Date..."
            android:inputType="date" />


        <TextView
            android:id="@+id/tv_add_book_author"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/et_add_book_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Author"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


        <Spinner
            android:id="@+id/sp_add_book_author"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/et_add_book_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/tv_add_book_author"
            android:layout_toRightOf="@+id/tv_add_book_author"
            android:spinnerMode="dialog"
            android:textSize="18sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_add_book_categorie"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/tv_add_book_author"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Category"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sp_add_book_categorie"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_add_book_author"
            android:layout_toEndOf="@+id/tv_add_book_categorie"
            android:layout_toRightOf="@+id/tv_add_book_categorie"
            android:spinnerMode="dialog"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_add_book_summary"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/tv_add_book_categorie"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Summary"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/et_add_book_summary"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_below="@+id/tv_add_book_summary"
            android:layout_marginTop="0dp"
            android:ems="30"
            android:gravity="left|top"
            android:hint="Enter a summary..."
            android:inputType="textMultiLine" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/validateButtonBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_upload" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>