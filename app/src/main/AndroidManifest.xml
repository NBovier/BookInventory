<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nathan_almin_bookinventory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <!-- Details ! -->
        <activity
            android:name=".ui.main.book_details"
            android:label="@string/title_activity_books_details" />
        <!-- Add ! -->
        <activity
            android:name=".ui.main.book_add"
            android:label="@string/title_activity_books_add" />
        <!-- Search books ! -->
        <activity
            android:name=".ui.main.books_search"
            android:label="@string/title_activity_books_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <!-- Main ! -->
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>